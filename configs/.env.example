# Complete Environment Configuration Template
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8000
DEBUG=false

# =============================================================================
# RECALL.AI CONFIGURATION
# =============================================================================
RECALL_API_KEY=your_recall_api_key_here
RECALL_BOT_NAME=VoiceBot
WEBPAGE_URL=http://localhost:3000

# =============================================================================
# STT (SPEECH-TO-TEXT) PROVIDERS
# =============================================================================

# Primary STT Provider (choose one: deepgram, google, whisper)
STT_PROVIDER=deepgram

# Deepgram Configuration
DEEPGRAM_API_KEY=your_deepgram_api_key_here
STT_MODEL=nova-2
STT_LANGUAGE=ja

# Google STT Configuration (alternative)
# STT_PROVIDER=google
# GOOGLE_STT_API_KEY=your_google_api_key_here
# GOOGLE_STT_MODEL=latest_long
# STT_LANGUAGE_CODE=ja-JP

# Whisper Configuration (alternative)
# STT_PROVIDER=whisper
# WHISPER_MODEL=base
# WHISPER_MODEL_PATH=path_to_whisper_model

# =============================================================================
# LLM (LARGE LANGUAGE MODEL) PROVIDERS
# =============================================================================

# Primary LLM Provider (choose one: openai, anthropic)
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=150

# Anthropic Configuration (alternative)
# LLM_PROVIDER=anthropic
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# LLM_MODEL=claude-3-sonnet-20240229
# LLM_TEMPERATURE=0.7

# =============================================================================
# TTS (TEXT-TO-SPEECH) PROVIDERS
# =============================================================================

# Primary TTS Provider (choose one: cartesia, elevenlabs)
TTS_PROVIDER=cartesia

# Cartesia Configuration
CARTESIA_API_KEY=your_cartesia_api_key_here
TTS_VOICE_ID=a0e99841-438c-4a64-b679-ae501e7d6091
TTS_MODEL=sonic-english

# ElevenLabs Configuration (alternative)
# TTS_PROVIDER=elevenlabs
# ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
# TTS_VOICE_ID=21m00Tcm4TlvDq8ikWAM
# TTS_MODEL=eleven_multilingual_v2

# =============================================================================
# PERSONA CONFIGURATION
# =============================================================================
PERSONA_LANGUAGE=ja
PERSONA_TONE=friendly
PERSONA_ENERGY_LEVEL=medium
PERSONA_FORMALITY=polite

# Custom system prompt (optional - overrides persona.md)
# SYSTEM_PROMPT="あなたは親しみやすいAIアシスタントです。"

# =============================================================================
# AUDIO CONFIGURATION
# =============================================================================
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_FRAME_SIZE=320
AUDIO_BUFFER_SIZE=4096

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
WS_MAX_CONNECTIONS=10
WS_PING_INTERVAL=30
WS_PING_TIMEOUT=10

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/voice_bot.log

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Set to true for development mode
DEV_MODE=true

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT secret for authentication (if needed)
# JWT_SECRET=your_jwt_secret_here

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Optional: Analytics and monitoring
# ANALYTICS_ENABLED=false
# SENTRY_DSN=your_sentry_dsn_here
